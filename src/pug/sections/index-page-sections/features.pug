include ../../content/index-page-content/features

include ../../mixins/main-title
include ../../mixins/info-card
include ../../mixins/main-btn

section.lw-section.features#features
  .lw-container
    +main-title({
      selector: 'h2',
      className: 'lw-main-title',
      text: 'Почему <span>выбирают</span> нас',
    })

    ul.features__list
      each feature in features
        li.features__list-item
          +info-card(feature)

    +main-btn({
      className: 'anchor-link',
      type: 'link',
      url: '#callback',
      text: 'Оставить заявку'
    })
